<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="20dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp"
    tools:context="com.example.networknewsfragment.ArticleFragment">

    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:gravity="fill_vertical"
        android:text="@string/title"
        android:textColor="@color/tv_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:transitionName="shared_element_transition"/>

    <TextView
        android:id="@+id/articleDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:gravity="fill_vertical"
        android:text="@string/description"
        android:textColor="@color/tv_color"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/articleSourceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:gravity="right|fill_vertical"
        android:text="@string/source_name"
        android:textColor="@color/tv_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/picasso_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:gravity="center|fill_vertical"
        android:text="@string/picasso_imageview"
        android:textColor="@color/tv_color"
        android:textSize="12sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/picasso_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:adjustViewBounds="true"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/glide_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:gravity="center|fill_vertical"
        android:text="@string/glide_imageview"
        android:textColor="@color/tv_color"
        android:textSize="12sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/glide_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        android:adjustViewBounds="true"
        android:scaleType="centerInside" />
</LinearLayout>